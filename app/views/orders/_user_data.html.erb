<div style="display: inline-table; width: 50%;">
  <%= content_tag(:h2, "Datos personales:") %>

  <div id="user_profile">
    <div class="row" style="border: none;"><b>Nombre:</b><%= user_data.fullname %> (<%= user_data.adscription_name %>)</div>
    <div class="row" style="border: none;"><b>Teléfono:</b><%= user_data.phone %></div>
    <div class="row" style="border: none;"><b>Fecha de solicitud:</b> <%= @order.new_record? ? (Date.today :short) : (@order.created_at :short) %></div>
      <% if user_data.has_user_incharge? %>
        <div class="row" style="border: none;"><b>Responsable académico:</b><%= user_data.user_incharge.fullname %></div>
      <% end %>
  </div>
</div>
