<div style="display: inline-table; width: 45%; margin-left: 25px;">
  <h2> Divisa:</h2>
  <div class="fix" id="currency_data">
    <div ="row">
      <span class="fix-left">Divisa:</span>
      <span class="fix-right" ><%= simple_select(:currency, Currency, {:conditions => ["id <= ?", 6]})%></span>
    </div>
    <%= observe_field :currency_currency_id, :url => {:controller => 'currencies', :action => :show},  :with => "'id='+$('currency_currency_id').value", :loading => "$('currency_form').update(''); $('currency_loader_indicator').show();", :complete => "$('currency_loader_indicator').hide();" %>
    <%= image_tag('progress_bar3.gif', :id => 'currency_loader_indicator', :style => 'display:none') %>
    <div id="currency_form">
    </div>
  </div>
</div>
